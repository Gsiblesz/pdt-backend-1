generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  createdAt DateTime @default(now())
}

model Registro {
  id        Int      @id @default(autoincrement())
  fecha     String   // Fecha del conjunto (puedes usar DateTime si prefieres)
  data      Json     // Objeto completo: incluye tiempos muertos, totales, m√°quinas, procesos, temperaturas, etc.
  createdAt DateTime @default(now())
  // Firma opcional para evitar duplicados exactos (fecha + id/nombre + tipo + start proceso1)
  signature String?  @unique
}
